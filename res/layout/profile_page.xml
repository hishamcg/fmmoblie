<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/profile_back_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/back_image_res" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dip"
                android:layout_marginTop="10dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="hello"
                android:textColor="#e111"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="30dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Email id: hisham@strata.co.in"
                android:textColor="#e111"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/user_nb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="JP Nagar 6th Phase"
                android:textColor="#e111"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="+919900990099"
                android:textColor="#e111"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:background="@drawable/edit_border_small"
        android:padding="3dip"
        android:scaleType="centerCrop"/>

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_image"
        android:layout_centerVertical="true"
        android:layout_marginLeft="23dp" />

</RelativeLayout>